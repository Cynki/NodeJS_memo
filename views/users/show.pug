doctype html
html
    head
        include ../partials/head.pug
    body
        include ../partials/nav.pug

        .container.mb-3
            h3.contentBoxTop= user.username

            form.user-form(action="/users", method="post")
                fieldset(disabled)
                    .form-group.row
                        label.col-sm-3.col-form-label(for="name") Name
                        .col-sm-9
                            input.form-control#name(type="text", name="name", value=user.name)
                    .form-group.row
                        label.col-sm-3.col-form-label(for="email") Email
                        .col-sm-9
                            input.form-control#email(type="text", name="email", value=user.email)
            
            div
                a.btn.btn-primary(href="/users") Back
                a.btn.btn-primary(href="/users/"+user.username+"/edit") Edit
                form.d-inline(action="/users/"+user.username+"?_method=delete", method="post")
                    a.btn.btn-primary(href="javascript:void(0)", onclick="confirm('Do you want to delete this user?')?this.parentElement.submit():null;") Delete